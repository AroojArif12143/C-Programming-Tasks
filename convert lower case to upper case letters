//converts lower case letter to upper case letter
#include <stdio.h>
#include <string.h>

int main() {
   char s[100];
   int i;
   printf("\n Enter a letter or a sentence to print in upper case : ");
   gets(s);
   
   for (i = 0; s[i]!='\0'; i++) {
      if(s[i] >= 'a' && s[i] <= 'z') {
         s[i] = s[i] - 32;
      }
   }
   printf("\n Letter or sentence in upper case = %s", s);
   return 0;
}
