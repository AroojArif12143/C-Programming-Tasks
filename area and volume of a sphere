#include<stdio.h>
#define PI 3.14
#define R 5
int main()
{
	float Area, Volume;
	Area = 4 * R*R*PI;
	Volume = (4.0 / 3)*PI*R*R*R;
	printf("\n Area of Sphere = %.2f", Area);
	printf("\n Volume of Sphere = %.2f", Volume);
	printf("\n Formulas are: for area => 4*PI*R*R and for volume => (4/3)PI*R*R*R where PI = 3.14 and R = 5");
	return 0;
}
